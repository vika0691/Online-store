{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "classic",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./ui/js",
    "lib": ["ES6", "DOM"],
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"]
}
